<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maimaimai"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <!-- 加入联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        name="com.example.maimaimai.utils.MyApp"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.example.maimaimai.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.maimaimai.ui.MainActivity" />
        <activity android:name="com.example.maimaimai.ui.LoginActivity" />
        <activity android:name="com.example.maimaimai.ui.MoreActivity" />
        <activity android:name="com.example.maimaimai.ui.RegisterActivity" />
        <activity android:name="com.example.maimaimai.ui.HouseActivity" />
        <activity android:name="com.example.maimaimai.ui.StartActivity" />
        <activity android:name="com.example.maimaimai.ui.CommodityActivity" />
        <activity android:name="com.example.maimaimai.ui.OrderActivity" />
        <activity android:name="com.example.maimaimai.ui.AddressActivity" />
        <activity android:name="com.example.maimaimai.ui.addNewAddress" />
    </application>

</manifest>