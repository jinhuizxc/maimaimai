<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" 
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_tab_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector"
                android:src="@drawable/main_bottom_tab_home_focus" />

            <ImageView
                android:id="@+id/home_tab_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector"
                android:src="@drawable/main_bottom_tab_search_focus" />

            <ImageView
                android:id="@+id/home_tab_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector"
                android:src="@drawable/main_bottom_tab_category_focus" />

            <ImageView
                android:id="@+id/home_tab_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector"
                android:src="@drawable/main_bottom_tab_cart_focus" />

            <ImageView
                android:id="@+id/home_tab_personal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector"
                android:src="@drawable/main_bottom_tab_personal_focus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shouye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/home_tab_background_selector" 
                android:textColor="@color/white"
                android:text="@string/shouye" />

            <TextView
                android:id="@+id/tv_sousuo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/home_tab_background_selector"
                android:textColor="@color/white"
                android:text="@string/sousuo" />

            <TextView
                android:id="@+id/tv_fenye"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/home_tab_background_selector"
                android:textColor="@color/white"
                android:text="@string/fenlei" />

            <TextView
                android:id="@+id/tv_gouwuche"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/home_tab_background_selector"
                android:textColor="@color/white"
                android:text="@string/gouwuche" />

            <TextView
                android:id="@+id/tv_wode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/home_tab_background_selector"
                android:textColor="@color/white"
                android:text="@string/wode" />

        </LinearLayout>

        </LinearLayout>
       
   

</LinearLayout>